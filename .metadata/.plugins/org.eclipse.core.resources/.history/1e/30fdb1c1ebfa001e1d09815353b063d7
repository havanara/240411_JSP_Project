	<!-- ne(아니면) eq(맞다면) -->
	<!-- 세션의 id가 null이 아니라면(= id가 값이 있다면) -->
	<div>
		<c:if test="${ses.id ne null }">
			${ses.id }님이 login 하셨습니다. <br>
			계정 생성일 : ${ses.regdate }
			최근 접속일 : ${ses.lastlogin }
